{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "jsx": "react",
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "./dist",
        "lib": [
            "es5",
            "es6",
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}